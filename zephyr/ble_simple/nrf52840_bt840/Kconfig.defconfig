if BOARD_NRF52840_MDK

config BOARD
	default "nrf52840_bt840"

config ADC_0
	default y
	depends on ADC

config I2C_0
	default y
	depends on I2C

config PWM_0
	default y
	depends on PWM

if USB

config USB_NRFX
	default y

config USB_DEVICE_STACK
	default y

endif # USB

config IEEE802154_NRF5
	default y
	depends on IEEE802154

config BT_CTLR
	default BT

endif # BOARD_NRF52840_MDK
